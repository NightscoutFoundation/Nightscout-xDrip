<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="32dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="32dp"
    tools:context="com.eveningoutpost.dexdrip.BolusCalculatorActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carbsheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/title_carbs_boluscalc"
            android:textColor="#ffffffff"
            android:textSize="32sp" />

        <LinearLayout
            android:id="@+id/layout_carbs_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCarbs"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#ffffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/carb_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carb_units"
                android:textSize="25sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/layout_bloodGlucose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodGlucoseHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/title_blood_glucose_boluscalc"
                    android:textColor="#ffffffff"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextBloodGlucose"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#ffffffff"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/bg_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mgdl_units"
                        android:textColor="#ffffffff"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:id="@+id/layout_boluses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/mealBolusCheckbox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/title_meal_bolus"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/mealBolusText"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_meal_bolus"
                    android:textColor="#ffffffff"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mealBolusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="@string/number_placeholder"
                    android:textColor="#ffffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/insulin_unit_mealBolus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insulin_units"
                    android:textSize="25sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/correctionBolusCheckbox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/title_correction_bolus"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/correctionBolus"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_correction_bolus"
                    android:textColor="#ffffffff"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/correctionBolusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="@string/number_placeholder"
                    android:textColor="#ffffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/insulin_unit_correctionBolus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insulin_units"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:id="@+id/layout_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_notes"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextNotes"
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_notes"
                        android:inputType="textPersonName|text" />

                    <ImageButton
                        android:id="@+id/note_speak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        app:srcCompat="@android:drawable/ic_btn_speak_now" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:id="@+id/layout_total_bolus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalBolusText"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_total_bolus"
                    android:textColor="#ffffffff"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/editTextTotalBolus"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="@string/number_placeholder"
                    android:textColor="#ffffffff"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/insulin_unit_totalBolus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insulin_units"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:text="@string/confirm_button_boluscalc" />

    </LinearLayout>

</RelativeLayout>